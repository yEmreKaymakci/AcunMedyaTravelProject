@model List<AcunMedyaTravelProject.Entities.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Slider Sayfası</h2>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SliderID</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>Açıklama2</th>
                <th>Resim</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SliderID</td>
                    <td>@item.Title</td>
                    <td>@item.Description1</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td><a href="/Slider/UpdateSliders/@item.SliderID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Slider/DeleteSliders/@item.SliderID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br /><br />
    <a href="Slider/CreateSliders/" class="btn btn-dribbble">Ekle</a>
</div>