@model AcunMedyaTravelProject.Entities.Slider
@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="modern-title">Slider Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.SliderID)

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title)
    <br />

    <label>Açıklama1</label>
    @Html.TextBoxFor(x => x.Description1)
    <br />

    <label>Açıklama2</label>
    @Html.TextBoxFor(x => x.Description2)
    <br />

    <label>Resim Linki</label>
    @Html.TextBoxFor(x => x.ImageUrl)
    <br />


    <button>Güncelle</button>

</form>
