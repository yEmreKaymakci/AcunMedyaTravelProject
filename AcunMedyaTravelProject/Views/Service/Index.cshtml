@model List<AcunMedyaTravelProject.Entities.Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td><a href="/Service/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Service/DeleteServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br /><br />
    <a href="/Service/CreateServices/" class="btn btn-dribbble">Ekle</a>
</div>