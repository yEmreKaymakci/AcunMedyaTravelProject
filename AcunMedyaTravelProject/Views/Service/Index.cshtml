@model List<AcunMedyaTravelProject.Entities.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@*1 normal c# ile yapılan silme işlemi
    2. ajax ile yapılan silme işlemi
    
*@

<h2>Hizmetler Sayfası</h2>

<a href="/Service/SearchServices/" class="btn btn-dribbble">Ara</a>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim Linki</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:80px;height:80px" /></td>
                    <td><a href="/Service/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.ServicesID)">Sil</button></td>
                </tr>
                
            }
        </tbody>

    </table>
    <br /><br />
    <a href="/Service/CreateServices/" class="btn btn-dribbble">Ekle</a>
</div>  


<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Dikkat bu işlemin geri dönüşü yoktur!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Verin silindi.",
                    icon: "success"
                });
                window.location.href = '/Service/DeleteServices/' + id;
            }
        });
    }


</script>