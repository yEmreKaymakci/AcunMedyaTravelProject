@model List<AcunMedyaTravelProject.Entities.Partner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Sponsorlar Sayfası</h2>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>PartnerID</th>
                <th>Resim Linki</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PartnerID</td>         
                    <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                    <td><a href="/Partners/UpdatePartners/@item.PartnerID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Partners/DeletePartners/@item.PartnerID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br /><br />
    <a href="/Partner/CreatePartners/" class="btn btn-dribbble">Ekle</a>
</div>