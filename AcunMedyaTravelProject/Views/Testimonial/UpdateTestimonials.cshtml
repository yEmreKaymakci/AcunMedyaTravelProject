@model AcunMedyaTravelProject.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="modern-title">Referans Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.TestimonialID)

    <label>İsim</label>
    @Html.TextBoxFor(x => x.Name)
    <br />

    <label>Soyisim</label>
    @Html.TextBoxFor(x => x.SurName)
    <br />

    <label>Resim Linki</label>
    @Html.TextBoxFor(x => x.ImgUrl)
    <br />

    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description)
    <br />

    <label>Konum</label>
    @Html.TextBoxFor(x => x.Location)
    <br />



    <button>Güncelle</button>

</form>
