@model List<AcunMedyaTravelProject.Entities.Testimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar Sayfası</h2>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ReferansID</th>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Resim</th>
                <th>Açıklama</th>
                <th>Konum</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Name</td>
                    <td>@item.SurName</td>
                    <td><img src="@item.ImgUrl" style="width:60px;height:60px" /></td>
                    <td>@item.Description</td>
                    <td>@item.Location</td>
                    <td><a href="/Testimonial/UpdateTestimonials/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonial/DeleteTestimonials/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br /><br />
    <a href="/Testimonial/CreateTestimonials/" class="btn btn-dribbble">Ekle</a>
</div>