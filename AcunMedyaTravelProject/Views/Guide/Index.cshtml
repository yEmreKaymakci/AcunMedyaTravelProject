
@model List<AcunMedyaTravelProject.Entities.Guide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Rehberler Sayfası</h2>

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>GuideID</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>Açıklama2</th>
                <th>Resim Linki</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GuideID</td>
                    <td>@item.Title</td>
                    <td>@item.Description1</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageUrl" style="width:80px;height:80px" /></td>
                    <td><a href="/Guide/UpdateGuides/@item.GuideID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Guide/DeleteGuides/@item.GuideID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>

    </table>
    <br /><br />
    <a href="/Guide/CreateGuides/" class="btn btn-dribbble">Ekle</a>
</div>