<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Tarih güncelleme
    document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const options = { day: 'numeric', month: 'long', year: 'numeric' };
        document.getElementById("currentDate").textContent = now.toLocaleDateString('tr-TR', options);

        // Sayaç animasyonu
        const counters = document.querySelectorAll('.counter');
        counters.forEach(counter => {
            const target = parseInt(counter.textContent);
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    counter.textContent = target;
                    clearInterval(timer);
                } else {
                    counter.textContent = Math.floor(current);
                }
            }, 20);
        });

        // Destinasyon Donut Grafiği
        const destinationCtx = document.getElementById('destinationChart');
        if (destinationCtx) {
            new Chart(destinationCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", ((List<string>)ViewBag.LastDestinations).Select(d => "'" + d + "'")))],
                    datasets: [{
                        data: [@for(int i = 0; i < ViewBag.LastDestinations.Count; i++){@(ViewBag.LastDestinations.Count - i)@(i < ViewBag.LastDestinations.Count - 1 ? "," : "")}],
                        backgroundColor: [
                            '#3b82f6',
                            '#10b981',
                            '#f59e0b',
                            '#ef4444',
                            '#8b5cf6'
                        ].slice(0, @ViewBag.LastDestinations.Count),
                        borderWidth: 0,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                font: {
                                    size: 12,
                                    family: 'Inter, sans-serif'
                                }
                            }
                        }
                    },
                    cutout: '65%'
                }
            });
        }

        // Genel İstatistik Çubuk Grafiği
        const generalCtx = document.getElementById('generalStatsChart');
        if (generalCtx) {
            new Chart(generalCtx, {
                type: 'bar',
                data: {
                    labels: ['Adminler', 'Destinasyonlar', 'Hizmetler', 'Referanslar', 'Kategoriler'],
                    datasets: [{
                        label: 'Toplam Sayı',
                        data: [@ViewBag.AdminCount, @ViewBag.DestinationCount, @ViewBag.ServicesCount, @ViewBag.TestimonialCount, @ViewBag.CategoryCount],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(139, 92, 246, 0.8)'
                        ],
                        borderColor: [
                            '#3b82f6',
                            '#10b981',
                            '#f59e0b',
                            '#ef4444',
                            '#8b5cf6'
                        ],
                        borderWidth: 2,
                        borderRadius: 8,
                        borderSkipped: false,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0,0,0,0.05)'
                            },
                            ticks: {
                                font: {
                                    family: 'Inter, sans-serif'
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                font: {
                                    family: 'Inter, sans-serif'
                                }
                            }
                        }
                    }
                }
            });
        }
    });
</script>










