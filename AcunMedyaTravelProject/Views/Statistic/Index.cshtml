@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper" style="background-color: #f8fafc;">


        <!-- Başlık Bölümü -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="welcome-card p-4 rounded-3 shadow-sm"
                     style="background: linear-gradient(135deg, #1e293b 0%, #334155 100%); color: white;">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="fw-bold mb-2">Dashboard Genel Bakış</h4>
                            <p class="mb-0 opacity-75">Sistem verilerinizi ve performans metriklerinizi takip edin</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="badge px-3 py-2"
                                 style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); font-size: 0.9rem;">
                                <i class="bi bi-calendar3 me-2"></i>
                                <span id="currentDate"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ana Metrik Kartları -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100 metric-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted mb-1 small fw-medium">TOPLAM DESTINASYON</div>
                                <h3 class="fw-bold text-primary mb-0 counter">@ViewBag.DestinationCount</h3>
                                <small class="text-success"><i class="bi bi-arrow-up"></i> %8.2 artış</small>
                            </div>
                            <div class="metric-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100 metric-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted mb-1 small fw-medium">TOPLAM HİZMET</div>
                                <h3 class="fw-bold text-success mb-0 counter">@ViewBag.ServicesCount</h3>
                                <small class="text-success"><i class="bi bi-arrow-up"></i> %12.5 artış</small>
                            </div>
                            <div class="metric-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-gear-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100 metric-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted mb-1 small fw-medium">MÜŞTERİ REFERANSI</div>
                                <h3 class="fw-bold text-warning mb-0 counter">@ViewBag.TestimonialCount</h3>
                                <small class="text-success"><i class="bi bi-arrow-up"></i> %5.3 artış</small>
                            </div>
                            <div class="metric-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-star-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100 metric-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted mb-1 small fw-medium">KATEGORİ SAYISI</div>
                                <h3 class="fw-bold text-info mb-0 counter">@ViewBag.CategoryCount</h3>
                                <small class="text-success"><i class="bi bi-arrow-up"></i> %3.1 artış</small>
                            </div>
                            <div class="metric-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-tags-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ana İçerik Bölümü -->
        <div class="row">
            <!-- Sol Taraf - Grafikler -->
            <div class="col-xl-8 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0 fw-bold">Son Destinasyonlar</h5>
                            <span class="badge bg-light text-dark">@ViewBag.LastDestinations.Count aktif</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Grafik Bölümü -->
                        <div class="row mb-4">
                            <div class="col-md-7">
                                <div class="chart-container" style="height: 300px;">
                                    <canvas id="destinationChart"></canvas>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="h-100 d-flex flex-column justify-content-center">
                                    <div class="row g-3">
                                        <div class="col-6">
                                            <div class="text-center p-3 rounded-3 bg-light">
                                                <h4 class="fw-bold text-primary mb-1 counter">@ViewBag.DestinationCount</h4>
                                                <small class="text-muted">Toplam</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center p-3 rounded-3 bg-light">
                                                <h4 class="fw-bold text-success mb-1 counter">@ViewBag.LastDestinations.Count</h4>
                                                <small class="text-muted">Yeni</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Destinasyon Tablosu -->
                        <div class="table-responsive">
                            <table class="table table-hover table-borderless">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-semibold text-muted small">#</th>
                                        <th class="fw-semibold text-muted small">DESTINASYON</th>
                                        <th class="fw-semibold text-muted small">DURUM</th>
                                        <th class="fw-semibold text-muted small">TARİH</th>
                                        <th class="fw-semibold text-muted small">İŞLEM</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = 1;
                                        foreach (var item in ViewBag.LastDestinations)
                                        {
                                            <tr>
                                                <td class="fw-semibold text-muted">@count</td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                            @item.ToString().Substring(0, 1)
                                                        </div>
                                                        <span class="fw-medium">@item</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success bg-opacity-10 text-success">
                                                        <i class="bi bi-check-circle-fill me-1"></i>Aktif
                                                    </span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">@DateTime.Now.AddDays(-count).ToString("dd.MM.yyyy")</small>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye me-1"></i>Görüntüle
                                                    </button>
                                                </td>
                                            </tr>
                                            count++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sağ Taraf - Detay Kartları -->
            <div class="col-xl-4">
                <!-- Son Eklenen Referans -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h6 class="mb-0 fw-bold">Son Müşteri Referansı</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                            <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                @if (ViewBag.LastTestimonial != null)
                                {
                                    @ViewBag.LastTestimonial.ToString().Substring(0, 1)
                                }
                                else
                                {
                                    <i class="bi bi-person"></i>
                                }
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">@(ViewBag.LastTestimonial ?? "Bulunamadı")</h6>
                                <small class="text-muted">Son eklenen referans</small>
                                <div class="mt-1">
                                    <span class="badge bg-primary bg-opacity-10 text-primary small">Onaylandı</span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 text-center">
                                <div class="fw-bold text-primary counter">@ViewBag.TestimonialCount</div>
                                <small class="text-muted">Toplam</small>
                            </div>
                            <div class="col-6 text-center">
                                <div class="fw-bold text-success">98%</div>
                                <small class="text-muted">Memnuniyet</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Son Kategori -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h6 class="mb-0 fw-bold">Son Eklenen Kategori</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                            <div class="avatar-lg bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                @if (ViewBag.LastCategory != null)
                                {
                                    @ViewBag.LastCategory.ToString().Substring(0, 1)
                                }
                                else
                                {
                                    <i class="bi bi-tag"></i>
                                }
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">@(ViewBag.LastCategory ?? "Bulunamadı")</h6>
                                <small class="text-muted">Kategori adı</small>
                                <div class="mt-1">
                                    <span class="badge bg-info bg-opacity-10 text-info small">Aktif</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Son Hizmet -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h6 class="mb-0 fw-bold">Son Eklenen Hizmet</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                            <div class="avatar-lg bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                @if (ViewBag.LastServices != null)
                                {
                                    @ViewBag.LastServices.ToString().Substring(0, 1)
                                }
                                else
                                {
                                    <i class="bi bi-gear"></i>
                                }
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">@(ViewBag.LastServices ?? "Bulunamadı")</h6>
                                <small class="text-muted">Hizmet adı</small>
                                <div class="mt-1">
                                    <span class="badge bg-success bg-opacity-10 text-success small">Yayında</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alt Grafik Bölümü -->
