@model List<AcunMedyaTravelProject.Entities.Mail>
@{
    ViewBag.Title = "SearchMail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid">
    <div class="search-container">
        <h2 class="search-title">Abone Arama</h2>

        <div class="search-form">
            <form method="get" action="/Mail/SearchMail" class="row g-3 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 rounded-start-pill">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 rounded-end-pill" id="searchTextInput" name="searchText" placeholder="Email adresine göre arayınız..." value="@Request.QueryString["searchText"]" />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-info w-100">
                        <i class="fas fa-search me-2"></i>Ara
                    </button>
                </div>
            </form>
        </div>

        @if (Model != null)
        {
            if (Model.Any())
            {
                <div class="results-table table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Mail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MailID</td>
                                    <td>@item.MailName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else if (Request.QueryString["searchText"] != null)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Hiç abone bulunamadı!
                </div>
            }
        }
    </div>
</div>

<section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .search-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .search-title {
            color: #0d6efd;
            font-weight: 600;
            margin-bottom: 1.5rem;
            border-left: 5px solid #0d6efd;
            padding-left: 15px;
        }

        .search-form input {
            border-radius: 50px;
            padding: 12px 20px;
            border: 1px solid #ced4da;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.05);
            transition: all 0.3s;
        }

            .search-form input:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .search-form button {
            border-radius: 50px;
            padding: 10px 25px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .search-form button:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

        .results-table {
            margin-top: 1.5rem;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.05);
        }

            .results-table thead {
                background-color: #0d6efd;
                color: white;
            }

            .results-table th,
            .results-table td {
                padding: 1rem;
            }

            .results-table tbody tr {
                transition: all 0.2s;
            }

                .results-table tbody tr:hover {
                    background-color: rgba(13, 110, 253, 0.05);
                }

        .alert {
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1.5rem;
        }
    </style>
</section>



