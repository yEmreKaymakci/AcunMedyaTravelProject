@model List<AcunMedyaTravelProject.Entities.Mail>  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <br /> <br />
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Abonelikler Listesi</h2>
        <a href="/Mail/SearchMail/" class="btn btn-info">
            <i class="fa-solid fa-magnifying-glass-arrow-right"></i>
        </a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>ID</td>
                <td>Email</td>
                <td>Sil</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MailID</td>
                    <td>@item.MailName</td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.MailID)">Sil</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>function Delete(id) {
        Swal.fire({
            title: "Emin misin?",
            text: "Dikkat bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, silin!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veri silindi.",
                    icon: "success",
                    allowOutsideClick: false
                }).then((result) => {
                    window.location.href = '/Mail/DeleteMail/' + id;
                });
            }
        });
    }</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">