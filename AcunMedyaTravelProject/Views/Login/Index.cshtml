@model AcunMedyaTravelProject.Entities.Admin

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Regal Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/regal-1.0.0/css/style.css">
    <link rel="stylesheet" href="~/regal-1.0.0/css/style.css">
    <link rel="stylesheet" href="~/regal-1.0.0/css/style.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/regal-1.0.0/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/regal-1.0.0/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/regal-1.0.0/images/logo-dark.svg" alt="logo">
                            </div>
                            <h4>Merhaba! Hadi başlayalım.</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.UserName , new { @class = "form-control form-control-lg", placeholder = "Kullanıcı adı" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control form-control-lg", placeholder = "Şifre" })
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-info btn-lg font-weight-medium auth-form-btn">GİRİŞ</button>
                                </div>
                                <div class="text-danger">
                                    @Html.ValidationSummary()
                                </div>
                            }

                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Beni hatırla
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Şifremi unuttum</a>
                            </div>

                            <div class="text-center mt-4 font-weight-light">
                                Hesabın yok mu? <a href="register.html" class="text-primary">Oluştur</a>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
        @if(!ViewData.ModelState.IsValid)
            {
                <p style="color:red">@Html.ValidationSummary()</p>
            }
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/regal-1.0.0/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/regal-1.0.0/js/off-canvas.js"></script>
    <script src="~/regal-1.0.0/js/hoverable-collapse.js"></script>
    <script src="~/regal-1.0.0/js/template.js"></script>
    <!-- endinject -->
</body>

</html>