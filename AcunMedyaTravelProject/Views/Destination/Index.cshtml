@model List<AcunMedyaTravelProject.Entities.Destination>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .table-wrapper {
        margin: 20px auto;
        width: 95%;
    }

    .my-table {
        width: 100%;
        border-collapse: collapse;
    }

        .my-table th, .my-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

    .modern-title {
        text-align: center;
    }
</style>


<h2 class="modern-title">Konumlar</h2>

<div class="table-wrapper">
    <table class="my-table">
        <thead>
            <tr>
                <th>DestinationID</th>
                <th>Resim Linki</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>Açıklama2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.DestinationID </td>
                    <td>@item.ImageUrl</td>
                    <td>@item.Title</td>
                    <td> <div class="cell-content">@item.Description1</div></td>
                    <td>@item.Description2</td>
                    <td> <a href="/Destination/UpdateDestinations/@item.DestinationID" class="btn btn-danger">Güncelle</a></td>
                    <td><a href="/Destination/DeleteDestinations/@item.DestinationID" class="btn btn-dark">Sil</a></td>

                </tr>
            }
        </tbody>

    </table>
    <a href="" class="btn btn-success">Ekle</a>
</div>


